block content
form.signin.signin__cell.signup__cell--main(action='/auth' method='post')

  header.signup__head
    h1.signup__title Sign In

  .signin__body
      fieldset.signup-fieldset
          ul.signup-form
            li
              <label for="" class="signup-form__label">Email:</label>
              .signup-form__input
                input.input.input--full(type='text' placeholder='email' name='EMAIL' ng-model='email' required)
            li
              <label for="" class="signup-form__label">Senha:</label>
              .signup-form__input
                input.input.input--full(type='password' placeholder='password' name='PASSWORD' required)

            .signup-action
                input.signup-action__btn.btn.btn--medium.btn--primary(type='submit' value='Sign In')
            div
              a.forgot(ng-href='/forgot?email={{email}}') Forgot password?
              br
              | ainda não é usuario?
              a.join(href='/#/signup')  Join now
