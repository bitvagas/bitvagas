update-title(title="{{ user.NAME }} | bitvagas")
update-meta(itemprop="description" content="{{ user.HEADLINE }} | bitvagas")
update-meta(itemprop="og:title" content="{{ user.HEADLINE }} | bitvagas")
update-meta(itemprop="og:description" content="{{ user.SUMMARY }} | bitvagas")
update-meta(itemprop="og:url" content="https://bitvagas.com/freelancers{{ user.id }}")
update-meta(itemprop="twitter:title" content="{{ user.headline }} | bitvagas")
update-meta(itemprop="twitter:description" content="{{ user.SUMMARY }} | bitvagas")
.cv
  .cv__cell.cv__cell--main
    .cv__header
      .cv__header--cell.cv__header--title
        h2.title__name {{ user.NAME }}
        h5.headline {{ user.HEADLINE }}
      .cv__header--cell.cv__header--img
        img.cv(src="img/CV.png")

    hr


    .cv__item(ng-if='user.SUMMARY')
      .cv__item--cell
        p.description {{ user.SUMMARY }}
      .cv__item--cell.cv__item--small
        h1
          i.mdi.mdi-account-circle

    //- ul
      //- li(ng-repeat="skill in user.cv.skills.values")
        //- label {{ skill.skill.name }}

    .cv__links
      ul
        li
          a(href="{{ user.LINKEDIN_PROFILE }}" target="_blank")
            i.mdi.mdi-linkedin-box
            | LinkedIn
        li
          a(href="mailto:{{ user.EMAIL }}")
            i.mdi.mdi-email
            | {{ user.EMAIL }}

  aside.cv__cell.cv__aside
    img.cv__img.dashboard__img(ng-src="{{ user.PICTURE ? user.PICTURE : 'img/unknown.svg' }}" fallback)

    ul.aside__list
      li
        label
          i.mdi.mdi-email
          span {{ user.EMAIL }}
      li
        label
          i.mdi.mdi-map-marker-radius
          span {{ user.LOCATION }}

    hr
