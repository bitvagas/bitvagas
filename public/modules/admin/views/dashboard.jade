.dashboard
  header.dashboard__head
    h1 DashBoard
  .dashboard__body
    aside.dashboard__cell.dashboard__cell--aside
      img(ng-src="{{ user.PICTURE ? user.PICTURE : 'https://m1.behance.net/rendition/modules/83055723/disp/729ebe0c689023040b7eb03fe48e7792.png' }}").dashboard__img


      p
        a(href="/auth/linkedin") Conectar CV

      ul
        li
          a(ui-sref='dashboard.overview') Visao Geral
        li
          a(ui-sref='dashboard.profile') Minha Conta
        li
          a(ui-sref='dashboard.cv({id : user.id})') Meu Curriculo
        li
          a(ui-sref='dashboard.jobs.list') Minhas Vagas
        li
          a(ui-sref='dashboard.organization.list') Minhas Organizações

    section(ui-view='').dashboard__cell.dashboard__cell--main
